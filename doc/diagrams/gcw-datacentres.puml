    }
    rectangle "       "<<inprog>> {
        database "GEUS\n(DK)" as Geus <<CryoNet>>
    }
    rectangle "        "<<inprog>> {
        database "TPE\n(CN)" as TPE <<CryoNet>>
    }
    /'
    database "??? (AR)" <<DataCentre>>
